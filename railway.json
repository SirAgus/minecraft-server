{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "",
    "healthcheckEnabled": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "envVars": {
      "PLUGINS_SYNC_UPDATE": {
        "value": "false"
      },
      "COPY_PLUGINS_ONLY_IF_NEWER": {
        "value": "false"
      },
      "SYNC_SKIP_NEWER_IN_DESTINATION": {
        "value": "true"
      }
    }
  },
  "ports": [
    {
      "port": 25565,
      "protocol": "tcp"
    },
    {
      "port": 19132,
      "protocol": "tcp"
    },
    {
      "port": 19132,
      "protocol": "udp"
    }
  ]
} 